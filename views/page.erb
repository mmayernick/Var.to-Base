<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
	"http://www.w3.org/TR/html4/loose.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title><%= (@target.link.title.nil? || @target.link.title == "") ? "Var.to" : @target.link.title %></title>
		<link rel="shortcut icon" href="http://<%= @@config['host_addr'] %>/favicon.ico">
		<link rel="icon" type="image/ico" href="http://<%= @@config['host_addr'] %>/favicon.ico">
		<script src="https://www.google.com/jsapi?key=ABQIAAAAA4leavEOZwlmrCNSD4OQkRR0bs9ZbPUVulMRMIJxqnZcGMPG5hQqQk8kaBsS67GuetllCbFW6uWqGA" type="text/javascript"></script>
		<script language="Javascript" type="text/javascript">
		//<![CDATA[
			google.load("jquery", "1.4.4");
		//]]>
		</script>
		<%= '<meta name="description" content="' + @target.link.description + '" />' unless (@target.link.description.nil? || @target.link.description == "") %>

		<script type="text/javascript">
		
			$(document).ready(main);

			function main()
			{
				registerEvents();
				resizeIframe();
			}

			function registerEvents()
			{
				$(window).resize( function() {resizeIframe();} );
			}
			
			function resizeIframe()
			{
				$("#iframe").height( WindowHeight() );
			}

			function WindowHeight()
			{
				var de = document.documentElement;
				return self.innerHeight || 
					(de && de.clientHeight ) ||
					document.body.clientHeight;
			}

		</script>
		<style type="text/css" media="screen">
			
			html {overflow: hidden;} 
			body
			{
				margin: 0;
				padding:0;
				font-family:Verdana,sans-serif;
				font-size: 15px;
			}
			#iframe { overflow: hidden;} /*this is to remove the scroll when not needed*/

			#iframe, iframe
			{
				width: 100%;
				height: 100%;
				z-index: -2;
			}
		</style>
	
	</head>
	<body id="content">
		<div id='iframe'>
			<iframe frameborder="0" src='<%= @target.target %>' id="page_iframe" /> 
		</div>
	</body>
</html>